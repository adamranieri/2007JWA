package dev.alsabea.daos.impl;

import java.util.HashMap;
import java.util.HashSet;
import java.util.Map;
import java.util.Set;

import dev.alsabea.daos.AccountDao;
import dev.alsabea.daos.AccountDao;
import dev.alsabea.entities.Account;
import dev.alsabea.entities.Account;

public class AccountDaoImpl implements AccountDao{

private static AccountDaoImpl dao = null;
	
	private AccountDaoImpl() {
		
	};
	
	public static AccountDao getAccountDao() {
		
		if(dao == null) {
			dao = new AccountDaoImpl();
			return dao;
		}else {
			return dao;
		}
		
	}
	
	private Map<Integer,Account> Account_table = new HashMap<Integer,Account>();
	
	private int counter = 1;
	

	public Account create(Account c) {
		c.setAccountId(counter);
		this.Account_table.put(c.getAccountId(), c);
		this.counter++;	
		return c;
	}

	public boolean delete(int id) {

		Account c= Account_table.remove(id);
		if (c!=null)
			return true;
		else
			return false;
		
	}
	
	public Account update(Account t) {
		 Account_table.put(t.getAccountId(),t);
		return t;
	}

	public Account retrieveById(int id) {

		return Account_table.get(id);
	}
	
	public Set<Account> retrieveAllAccounts() {
		Set<Account> Accounts = new HashSet<>(Account_table.values());
		return Accounts;
	}
	
}
